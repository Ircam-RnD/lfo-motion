<!DOCTYPE html>
<html>
  <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1">
      <title>Sensors monitor</title>
      <link rel="stylesheet" href="./styles.css" />
  </head>
  <body>
    <% if (name === 'index') { %>

    <h1>Sensor Monitoring</h1>
    <div id="controls"></div>
    <div id="wrapper">

      <div class="inner-wrapper">
        <h1>Mobile</h1>

        <h2>x axis</h2>
        <canvas id="x-display"></canvas>

        <h2>y axis</h2>
        <canvas id="y-display"></canvas>

        <h2>z axis</h2>
        <canvas id="z-display"></canvas>
      </div>

      <div class="inner-wrapper">
        <h1>RioT</h1>

        <h2>x axis</h2>
        <canvas id="riot-x-display"></canvas>

        <h2>y axis</h2>
        <canvas id="riot-y-display"></canvas>

        <h2>z axis</h2>
        <canvas id="riot-z-display"></canvas>
      </div>

    </div>

    <p>
- <span class="steelblue">blue</span>: filter out
- <span class="green">green</span>: raw acceleremeter
- <span class="orange">orange</span>: raw gyroscope
    </p>
    <% } else if (name === 'mobile') { %>
      <h1>Sensor Client</h1>
    <%Â } %>

    <script src="./<%= name %>-bundle.js"></script>
  </body>
</html>
